<div class="edit_block">
    <%= form_tag({ :controller => 'wiki', :action => 'search'},
                 {'class' => 'search_form', 'method' => 'get'}) %>
      <input type="text" class="search_field" name="query" value="Search"
             onfocus="this.value == 'Search' ? this.value = '' : true"
             onblur="this.value == '' ? this.value = 'Search' : true" />
    <%= end_form_tag %>
</div>

