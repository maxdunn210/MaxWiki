<%
  @title = 'Reset Password'
  @left_column_partial = 'layouts/auto_left_menu' 
%>

<h3><%= @title %></h3>
<%= error_messages_for('user') %>

<p>If you need to reset your password, 
enter your email address below and a verification email will be sent. </p>

<%= form_tag :controller => 'user', :action => 'reset_password' %>
  <p>
    <label for="user_email">Email</label>
    <%= text_field 'user', 'email' %>
  </p>

  <p>
  <div class="button_bar">
    <%= submit_tag 'Submit Request', :action => 'reset_password' %>
    <%= link_to 'Cancel', :action => 'index' %>
  </div>
  </p>
<%= end_form %>
    