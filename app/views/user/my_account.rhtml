<%
  @title = 'My Account'
  @left_column_partial = 'layouts/auto_left_menu' 
%>

<h3><%= @title %></h3>

<p>
<% if logged_in? %>
You are now logged in to <%= config_site_name %> as '<%= session_user_name %>' with role '<%= session_role_name %>'.
<% else %>
You are not logged in. <%= link_to "Login now", :action => 'login' %>.
<% end %>
</p>



